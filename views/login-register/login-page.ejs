<%- include("../includes/head") %>
</head>
<body>
    <div class="login-form">
        <h2 class="login-form-title">Log in</h2>
        <form class="login-form-form" action="/login" method="POST">
            <label for="loginformname"></label>
            <input type="text" name="loginformname" id="loginformname" placeholder="USERNAME">
            <label for="loginformpassword"></label>
            <input type="password" name="loginformpassword" id="loginformpassword" placeholder="PASSWORD">
            <button class="login-form-button" type="submit">Log in</button>
        </form>
        <div class="login-form-subform">
            <div class="login-form-remember-button">
                <input type="checkbox">
                <p>Remember me</p>
            </div>
            <a href="/register" class="login-form-forgotpassword">I don`t have account</a>
        </div>

    </div>
</body>
</html>