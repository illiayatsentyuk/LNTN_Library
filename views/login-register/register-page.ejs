<%- include("../includes/head") %>
<link rel="stylesheet" href="/css/login.css">
</head>
<body>
    <div class="login-form">
        <h2 class="login-form-title">Register</h2>
        <form class="login-form-form" action="/register" method="POST">
            <label for="loginformname">Username</label>
            <input <% if(errors.name) { %> style="border:1px solid red" <% } %> type="text" name="loginformname" id="loginformname" placeholder="USERNAME">
            <% if(errors.name) { %> <p style="color:red;"><%= errors.name.errorType %></p> <% } %>
            <label for="loginformpassword">Password</label>
            <input <% if(errors.password) { %> style="border:1px solid red" <% } %> type="password" name="loginformpassword" id="loginformpassword" placeholder="PASSWORD">
            <% if(errors.password) { %> <p style="color:red;"><%= errors.password.errorType %></p> <% } %>
            <label for="loginformemail">Email</label>
            <input <% if(errors.email) { %> style="border:1px solid red" <% } %> type="text" name="loginformemail" id="loginformemail" placeholder="email">
            <% if(errors.email) { %> <p style="color:red;"><%= errors.email.errorType %></p> <% } %>
            <button class="login-form-button" type="submit" >Register</button>
        </form>
            <a href="/login" class="login-form-forgotpassword">Login</a>
        </div>

    </div>
</body>
</html>